{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src", // for non-relative modules import
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["tests", "coverage", "scripts", "jest.config.js"],
  "include": ["src"]
}
